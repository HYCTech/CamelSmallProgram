  height: 182rpx;
  text-indent: 28rpx;
  border: 1rpx solid gainsboro;
  padding-top: 10rpx;
  margin: 0 auto;
  overflow: hidden;
  position: relative;
  margin-bottom: 10rpx;
  padding-bottom: 10rpx;
}

.currentWordNumber {
  font-size: 28rpx;
  color: gray;
  position: absolute;
  left: 593rpx;
  top: -6rpx;
}

.hint {
  font-size: 28rpx;
  position: absolute;
  top: 120rpx;
  right: 30rpx;
  text-align: center;
  color: #f60;
}

.repair-conent {
  padding: 10px 15px;
}

