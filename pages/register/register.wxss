/* pages/register/register.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 2%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 5%;
  background-color: #f8f8f8;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

button {
  margin-top: 25rpx;
  width: 100%;
  margin-bottom: 10rpx;
  
}

.avatar-img {
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
  background: white;
  align-self: center;
  
}

.placeholder-text{
  font-size: 16px;
}

.weui-vcode-btn {
  display: inline-block;
  padding: 0 0.6em 0 0.7em;
  border-left: 1px solid #e5e5e5;
  line-height: 2.58823529em;
  font-size: 14px;
  color: #3cc51f;
  white-space: nowrap;
}
